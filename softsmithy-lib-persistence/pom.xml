    <artifactId>softsmithy-lib-persistence</artifactId>
    <packaging>bundle</packaging>

    <name>SoftSmithy Utility Library - Persistence</name>
    <url>http://www.softsmithy.org</url>
    <description>A JPA utility library.</description>
    <inceptionYear>2010</inceptionYear>

    <scm>
        <connection>${scm.connection}</connection>
        <developerConnection>${scm.developerConnection}</developerConnection>
        <url>${scm.url}</url>
    </scm>

    <properties>
        <scm.connection>${scm.parent.connection}</scm.connection>
